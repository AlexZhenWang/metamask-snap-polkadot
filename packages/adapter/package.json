{
  "name": "@nodefactory/metamask-polkadot-adapter",
  "version": "0.3.0",
  "main": "./build/index.js",
  "module": "./build/index.js",
  "types": "./build/index.d.ts",
  "author": "NodeFactory <info@nodefactory.io>",
  "license": "Apache-2.0",
  "private": false,
  "homepage": "https://github.com/NodeFactoryIo/metamask-snap-polkadot/tree/master/packages/adapter",
  "keywords": [
    "polkadot",
    "metamask",
    "snap",
    "substrate"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@polkadot/api": "^1.22.1",
    "@nodefactory/metamask-polkadot-types": "^0.3.0",
    "@polkadot/extension-inject": "^0.31.1"
  },
  "scripts": {
    "prebuild": "rm -rf build",
    "build": "yarn run build:lib && yarn run build:types",
    "build:lib": "tsc --build tsconfig.json",
    "build:types": "tsc --emitDeclarationOnly",
    "lint": "yarn run lint:style && yarn run lint:types",
    "lint:types": "tsc --noEmit --pretty",
    "lint:style": "eslint --color 'src/**/*.{js,ts,tsx}'",
    "lint:style:fix": "yarn run lint:style --fix",
    "prepublish": "yarn run build",
    "test": "exit 0"
  },
  "devDependencies": {
    "@types/node": "^12.12.35",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "eslint": "^6.8.0",
    "typescript": "^3.8.3"
  },
  "gitHead": "f02721b70d74e138f6401a7a4e4d36412ca1e9dc"
